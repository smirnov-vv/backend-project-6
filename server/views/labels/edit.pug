extends ../layouts/application.pug

block header
  = t('views.marks.edit.header')

block content
  +formFor()(action=route('patchTag', { id: tag.id }) method='post')
    input(name='_method' type='hidden' value='patch')
    +input(tag, 'name', errors)(type="text")
    +submit(tag)(value=t('views.marks.edit.submit'))
