extends ../layouts/application.pug

block header
  = task.name

block content
  div(class='row mt-5 p-5 shadow bg-white')
    div(clas='col-12 col-md-8 order-2 order-md-1')
      div(class='lead fw-normal mb-4')= task.description
    div(clas='col-12 col-md-4 border-start px-3 order-1 order-md-2 mb-3 mb-md-0')
      div(class='mb-2')
        span(class='me-1 badge bg-danger text-white')= task.status
        each tag in tagNames
          span(class='me-1 badge bg-info text-white')= tag
      div(class='d-flex flex-wrap mb-3')
        span(class='text-muted me-2')= t('views.tasks.author')
        span= `${task.creatorFirstName} ${task.creatorLastName}`
      div(class='d-flex flex-wrap mb-3')
        span(class='text-muted me-2')= t('views.tasks.responsible')
        span= `${task.executorFirstName} ${task.executorLastName}`
      div(class='d-flex flex-wrap mb-3')
        span(class='text-muted me-2')= t('views.tasks.createdAt')
        span= task.createdAt
      div(class='d-flex flex-wrap')
        +buttonGet(`/tasks/${task.id}/edit`)(value= t('views.tasks.alter') class='btn btn-primary me-1')
        +buttonTo(`/tasks/${task.id}`, 'delete')(value= t('views.tasks.delete') class='btn btn-danger')
